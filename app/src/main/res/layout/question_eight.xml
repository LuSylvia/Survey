<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 8"
        android:textSize="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which brand of phone will you \nchoose if you are going to buy a\nnew one?"
        android:textSize="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="55dp"
        ></TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg_08"
        >


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iphone"
        android:id="@+id/rb_08_Iphone"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="85dp"
        android:textSize="20dp"
        ></RadioButton>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nokia"
        android:id="@+id/rb_08_Nokia"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="85dp"
        android:textSize="20dp"
        ></RadioButton>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samsung"
        android:id="@+id/rb_08_Samsung"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="85dp"
        android:textSize="20dp"
        ></RadioButton>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MI"
        android:id="@+id/rb_08_MI"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="85dp"
        android:textSize="20dp"
        ></RadioButton>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lenovo"
        android:id="@+id/rb_08_Lenovo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="85dp"
        android:textSize="20dp"
        ></RadioButton>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sony"
        android:id="@+id/rb_08_Sony"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="85dp"
        android:textSize="20dp"
        ></RadioButton>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        android:id="@+id/rb_08_Others"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="85dp"
        android:textSize="20dp"
        ></RadioButton>


    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NEXT"
        android:id="@+id/btn_ques8_next"
        android:textSize="18dp"
        android:background="@color/colorGreen"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:onClick="onBtnClick"
        >
    </Button>

    <!-- END    : Your code should be within this block -->

</LinearLayout>
